{% trans_default_domain 'FOSUserBundle' %}

	<div class="container">
		<div class="col-md-7 col-md-push-2">			
			<div class="row">
				<h1 class="text-center">Perfil de {{ user.username }} </h1>
				<div class="col-md-4">
					<img  class="img-responsive" src="http://home.iitk.ac.in/~kundua/male.png">
				</div>
				<div class="col-md-7"><br>
					<br>
					<div class="fos_user_user_show">
						<ul class="nav nav-tabs">
							<li role="presentation" class="active"><a>Informaci√≥ Basica</a></li>  
						</ul>
						<table class="table table-bordered" >
							<tr>
								<td><strong>{{ 'profile.show.username'|trans }}</strong></td>
								<td><span class="fa fa-user"/> {{ user.username }}</td>
							</tr>
							<tr>
								<td><strong>{{ 'profile.show.lastlogin'|trans }}</strong></td>
								<td><span class="fa fa-clock"/> {{ user.lastLogin | date("d/m/Y") }}</td>
							</tr>
							<tr>
								<td><strong>{{ 'profile.show.email'|trans }}</strong></td>
								<td>{{ user.email }}</td>
							</tr>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>