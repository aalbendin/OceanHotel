{% extends "HotelBundle:Default:backend.html.twig" %}
{% block title %}Tasca{% endblock %}
	{% block content %} 
		<div id="contingut">
			<div class="container-fluid">
				<div class="row">
					<div class="col-lg-12">
						<h1 class="text-center">Les meves taques</h1>
						{% for flashMessage in app.session.flashbag.get('notice') %}
							<div class="alert alert-{{ flashMessage.type }}">
								<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
								<h4 class="text-center">{{ flashMessage.msg }}</h4>
							</div>
						{% endfor %}	
						
						<div class="row">									
						</div>
							<div class="table-responsive">
								<table id="table_id" class="table table-striped table-bordered">
									<thead>
										<tr>
											<th>Descripció</th>
											<th>Data d'alta</th>
											<th>Tipus Tasca</th>
											<th>Estat</th>
											<th>Finalitzar Tasca</th>
										</tr>
									</thead>
									<tfoot>
										<tr>
											<th>Descripció</th>
											<th>Data d'alta</th>
											<th>Tipus Treballador</th>
											<th>Estat</th>
											<th>Finalitzar Tasca</th>
										</tr>
									</tfoot>
									<tbody>
										
										{% for tasca in arrayTasca %}
										<tr>
											<td>{{tasca.descripcio}}</td>
											<td>{{tasca.dataAlta|date('d/m/Y')}}</td>
											{% if tasca.tipusTasca != null %}
											<td>{{tasca.tipusTasca.getDescripcio()}}</td>
											{% else %}
											<td>Sense tipus</td>
											{% endif %}											
											{% if arrayTreball != null %}
											{% for treball in arrayTreball %}
												{% if treball.tasca.getId() == tasca.id %}
													{% if treball.estat.getId() == 1 %}
													<td class="bg-warning text-blanc">{{treball.estat.getDescripcio()}}</td>
													{% endif %}
													{% if treball.estat.getId() == 2 %}
													<td class="bg-success text-blanc">{{treball.estat.getDescripcio()}}</td>
													{% endif %}
													{% if treball.estat.getId() == 3 %}
													<td class="bg-danger text-blanc">{{treball.estat.getDescripcio()}}</td>
													{% endif %}
												{% endif %}

											{% endfor %} 
											{% else %}
											<td>Sense Estat</td>	
											{% endif %}
											{% for treball in arrayTreball %}
												{% if treball.tasca.getId() == tasca.id %}
													{% if treball.estat.getDescripcio() == "proces"%}
													<td id="td-assignar"><a id="btn-assignar" href="{{path('hotel_bundle_treballadors_finalitzar_tasca', { 'idTasca': tasca.id })}}" class="btn btn-xs btn-danger" onclick="desactivar()">Finalitzar</a></td>
													{% else %}
														<td>Finalitzada el {{treball.datafi| date('d/m/Y')}}</td>
													{% endif %}
												{% endif %}

											{% endfor %} 
											
										</tr>
										 {% endfor %} 										
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
			</div>	
			
	{% endblock %}	
