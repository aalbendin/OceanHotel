{% extends "HotelBundle:Default:index.html.twig" %}
{% block title %}Habitacions{% endblock %}
	{% block page_content %} 
		<div id="contingut">
			<div class="container">
				<div class="row">
					<div class="col-lg-12">
						<h1 class="text-center">Habitacions</h1>
						{% for flashMessage in app.session.flashbag.get('notice') %}
							<div class="alert alert-{{ flashMessage.type }}">
								<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
								<h4 class="text-center">{{ flashMessage.msg }}</h4>
							</div>
						{% endfor %}	

						<div class="row">	
							<a href="{{path('hotel_bundle_reserva_acabarReserva' )}}" class="btn btn-warning btn-afegir"><span class="fa fa-plus"/>Acabar reserva</a>							
						</div>
							<div class="table-responsive">
								<table id="table_id" class="table table-striped table-bordered">
									<thead>
										<tr>
											<th>Codi reserva</th>
											<th>Num. Habitaci贸</th>
											<th>Tipus d'habitaci贸</th>	
											<th>Places</th>
											<th>Preu</th>		
											<th>Modalitat</th>									
											<th><span class="fa fa-cogs"></span> Config</th>
										</tr>
									</thead>
									<tfoot>
										<tr>
											<th>Codi reserva</th>
											<th>Num. Habitaci贸</th>
											<th>Tipus d'habitaci贸</th>	
											<th>Places</th>
											<th>Preu</th>		
											<th>Modalitat</th>										
											<th><span class="fa fa-cogs"></span> Config</th>
										</tr>
									</tfoot>
									<tbody>
										{% for reserva in arrayLinea %}
										<tr>
											<td>{{reserva.id}}</td>
											<td>{{reserva.habitacio.getNumHabitacio()}}</td>
											<td>{{reserva.habitacio.getTipusHabitacio().getDescripcio()}}</td>
											<td>{{reserva.habitacio.getPlaces()}}</td>
											<td>{{reserva.habitacio.getPreu()}}</td>
											<td> MODALITAT ENCARA NO DISPONIBLE </td>
											<td>
												<center>
												<a href="{{ path('hotel_bundle_reserva_editarLiniaComanda', { 'id': reserva.habitacio.id }) }}" class="btn btn-xs btn-info"><span class="fa fa-pencil"></span></a>
												<a  href="{{path('hotel_bundle_reserva_habitacio_delete', { 'id': reserva.habitacio.id }) }}"class="btn btn-xs btn-danger"><span class="fa fa-trash"></span></a>
												</center>
											</td>
										</tr>
										{% endfor %} 										
									</tbody>
								</table>
							</div>

							<div>
								 
								{% if client == null %}
									No hi han dades de client.
								{% else %}
									Ets un putu crack, el teu client te el nom {{client.getNom()}}
								{% endif %}

							</div>

						</div>
					</div>
				</div>
			</div>	
	{% endblock %}	