                                habs = JSON.parse(data.habitacions);

                                if(data.hasOwnProperty("modalitat"))
                                {
                                  mods = JSON.parse(data.modalitat);
                                }

                                if(datesValides){
                                datesValides2 = true;
                                }

                                processaDadesHab();
                             
                    }
                    else
                    {
                        console.log("INVALID JSON STRING");
                    }
                }
                else
                {
                    console.log("HABITACIONS NOT FOUND");
                }
            }
        },
        error: function(jqXHR, exception)
        {
