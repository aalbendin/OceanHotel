{% extends "HotelBundle:Default:index.html.twig" %}

{% block title %}Habitacions{% endblock %}
	{% block page_content %} 
	
		<div id="contingut">
			<div class="container">
				<div class="row">
					<div class="col-lg-12">
						<!--BARRA DE BUSQUEDA Y TITULO -->
						<div class="row">
						<div class="col-xs-6">
							<h1 class="text-center col-xs-8">Habitacions disponibles</h1>
						</div>
						<div class="col-xs-3">
							<div class="col-xs-3">
								<span class="fa fa-search"/>
							</div>
							<div class="col-xs-3">
							<input class="js-datepicker" id="from" placeholder="Desde">
							</div>
							<div class="col-xs-3">
								<span class="fa fa-search"/>
							</div>
							<div class="col-xs-3">
							<input class="js-datepicker" id="to" placeholder="Hasta">
							</div>
						</div>
						<div class="col-xs-3">
							<div class="col-xs-2">
								<span class="fa fa-search"/>
							</div>
							<div class="col-xs-10">
							<input id="searchHabitacions" placeholder="Buscar">
							</div>
						</div>
						</div>


						<!--HABITACIONES -->
						<div class="row">									
							{% for habitacio in array %}
										<div class="col-sm-6 col-md-4">
										    <div class="thumbnail">
										      <img src="{{habitacio.tipusHabitacio.getImatge()}}">
										      <div class="caption">
										        <div class="row">
															<div id="nomMiniHabitacio" class="col-xs-9">
																<h3>{{habitacio.tipusHabitacio.getDescripcio()}}</h3>
															</div>
															<div id="preuMiniHabitacio" class="col-xs-3 ">
																 <h3>{{habitacio.preu}}</h3>
															</div>
												</div>
												<div class="row">
													<div id="nomMiniHabitacio" class="col-xs-8">
														<h4>Places: {{habitacio.places}}</h4>
													</div>
													<div id="preuMiniHabitacio" class="col-xs-4 ">
														 <a href="{{ path('hotel_bundle_reserva_afegirLiniaComanda', { 'id': habitacio.id }) }}" type="button" class="btn btn-primary">Reservar</a>
													</div>
											    </div>
										      </div>
										  	</div>
  										</div>
							{% endfor %} 	
						</div>
					</div>
				</div>
			</div>	
	{% endblock %}	