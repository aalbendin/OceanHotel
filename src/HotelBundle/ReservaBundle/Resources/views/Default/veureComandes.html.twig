	{% extends "HotelBundle:Default:index.html.twig" %}

	{% block title %}Reservas{% endblock %}

	{% block page_content %} 

		<div id="contingut">
			<div class="container">
				<div class="row">
					<div class="col-lg-12">
						<h1 class="text-center">Reservas</h1>

							{% for flashMessage in app.session.flashbag.get('notice') %}
								<div class="alert alert-{{ flashMessage.type }}">
									<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
									<h4 class="text-center">{{ flashMessage.msg }}</h4>
								</div>
							{% endfor %}	

							<div class="table-responsive">
								<table id="table_id" class="table table-striped table-bordered">

									<thead>
										<tr>
											<th>Codi reserva</th>
											<th>Data d'entrada</th>
											<th>Data de sortida</th>								
											<th><span class="fa fa-cogs"></span> Veure</th>
										</tr>
									</thead>

									<tfoot>
										<tr>
											<th>Codi reserva</th>
											<th>Data d'entrada</th>
											<th>Data de sortida</th>								
											<th><span class="fa fa-cogs"></span> Veure</th>
										</tr>
									</tfoot>

									<tbody>
										{% for comanda in arrayComanda %}
											<tr>
												<td>{{comanda.id}}</td>
												<td>{{comanda.dataEntrada}}</td>
												<td>{{comanda.dataSortida}}</td>
												<td>
													<center>
														<a href="{{ path('hotel_bundle_reserva_veureReserva', { 'id': comanda.id }) }}" class="btn btn-xs btn-info"><span class="fa fa-search"></span></a>
													</center>
												</td>
											</tr>
										{% endfor %} 										
									</tbody>		
								</table>
						</div>										
					</div>
				</div>
			</div>
		</div>	
	{% endblock %}	