{% extends "HotelBundle:Default:backend.html.twig" %}
{% block title %}Clients{% endblock %}
	{% block content %} 
		<div id="contingut">
			<div class="container-fluid">
				<div class="row">
					<div class="col-lg-12">
						<h1 class="text-center">Clients</h1>
						{% for flashMessage in app.session.flashbag.get('notice') %}
							<div class="alert alert-{{ flashMessage.type }}">
								<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
								<h4 class="text-center">{{ flashMessage.msg }}</h4>
							</div>
						{% endfor %}	
						<div class="row">
							<a href="{{path('hotel_bundle_admin_reserva_afegirClient')}}" class="btn btn-warning btn-afegir"><span class="fa fa-plus"/>  Afegir Client</a>
						</div>
						<div class="row">									
						</div>
							<div class="table-responsive">
								<table id="table_id" class="table table-striped table-bordered">
									<thead>
										<tr>
											<th>Nom</th>
											<th>Cognom</th>
											<th>Data Naixement</th>
											<th>Nif</th>
											<th>Usuari</th>
											<th><span class="fa fa-cogs"></span> Config</th>
										</tr>
									</thead>
									<tfoot>
										<tr>
											<th>Nom</th>
											<th>Cognom</th>
											<th>Data Naixement</th>
											<th>Nif</th>
											<th>Usuari</th>
											<th><span class="fa fa-cogs"></span> Config</th>
										</tr>
									</tfoot>
									<tbody>
										{% for client in array %}
										<tr>
											<td>{{client.nom}}</td>
											<td>{{client.cognoms}}</td>
											<td>{{client.dataNaixament | date('d/m/Y')}}</td>
											<td>{{client.nif}}</td>
											<td>{{client.getUser().getUsername()}}</td>	
											<td>
												<center>
												<a href="{{ path('hotel_bundle_admin_reserva_editarClient', { 'id': client.id }) }}" class="btn btn-xs btn-info"><span class="fa fa-pencil"></span></a>
												<a  href="{{path('hotel_bundle_admin_reserva_eliminarClient', { 'id': client.id }) }}" class="btn btn-xs btn-danger"><span class="fa fa-trash"></span></a>
												</center>
											</td>
										</tr>
										 {% endfor %} 										
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
			</div>	
	{% endblock %}	
