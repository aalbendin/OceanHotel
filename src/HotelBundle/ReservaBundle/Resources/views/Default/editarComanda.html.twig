{% extends "HotelBundle:Default:backend.html.twig" %}
{% block title %}Habitacions{% endblock %}
    {% block content %} 
		<div id="contingut">
			<!--<div class="container">-->
				<div class="row">
        			<div class="col-lg-12 col-md-12 col-xs-12">
						<h1 class="text-center">Habitacions</h1>
						{% for flashMessage in app.session.flashbag.get('notice') %}
							<div class="alert alert-{{ flashMessage.type }}">
								<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
								<h4 class="text-center">{{ flashMessage.msg }}</h4>
							</div>
						{% endfor %}	
						<div class="row">
							<a href="{{path('hotel_bundle_admin_reserva_editarClientByComanda', { 'idComanda': comanda.id , 'id': client.id }) }}" class="btn btn-warning btn-afegir"><span class="fa fa-plus"/>  Client</a>
						</div>
						<div class="row">
							<a href="{{path('hotel_bundle_admin_reserva_donarBaixaComanda', { 'id': comanda.id }) }}" class="btn btn-warning btn-afegir"><span class="fa fa-plus"/> Donar Baixa Comanda</a>
						</div>
						<div class="row">									
						</div>
							<div class="table-responsive">
								<table id="table_id" class="table table-striped table-bordered">
									<thead>
										<tr>
											<th>Codi reserva</th>
											<th>Num. Habitaci贸</th>
											<th>Tipus d'habitaci贸</th>	
											<th>Places</th>
											<th>Preu</th>		
											<th>Modalitat</th>									
											<th><span class="fa fa-cogs"></span> Config</th>
										</tr>
									</thead>
									<tfoot>
										<tr>
											<th>Codi reserva</th>
											<th>Num. Habitaci贸</th>
											<th>Tipus d'habitaci贸</th>	
											<th>Places</th>
											<th>Preu</th>		
											<th>Modalitat</th>											
											<th><span class="fa fa-cogs"></span> Config</th>
										</tr>
									</tfoot>
									<tbody>
										{% for reserva in arrayLinea %}
										<tr>
											<td>{{reserva.id}}</td>
											<td>{{reserva.getHabitacio().getNumHabitacio()}}</td>
											<td>{{reserva.getHabitacio().getTipusHabitacio().getDescripcio()}}</td>
											<td>{{reserva.getHabitacio().getPlaces()}}</td>
											<td>{{reserva.getHabitacio().getPreu()}}</td>
											<td>{{reserva.modalitat.getDescripcio()}}</td>
											<td>
												<center>
												<a  href="{{path('hotel_bundle_admin_reserva_eliminarLineaComanda', { 'idComanda':comanda.id  , 'id': reserva.id }) }}"class="btn btn-xs btn-danger"><span class="fa fa-trash"></span></a>
												</center>
											</td>
										</tr>
										 {% endfor %} 										
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
			<!--</div>-->	
	{% endblock %}	