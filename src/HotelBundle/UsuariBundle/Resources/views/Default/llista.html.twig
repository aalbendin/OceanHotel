{% extends "HotelBundle:Default:backend.html.twig" %}
{% block title %}Llista d'usuaris{% endblock %}
	{% block content %} 
		<div id="contingut">
			<div class="container-fluid">
				<div class="row">
					<div class="col-lg-12">
						<h1>Usuaris</h1>	
						<div class="row">	
						<div class="col-lg-3 col-lg-push-9">
							<a href="#" class="btn btn-md btn-warning"><span class="fa fa-plus"/>  Afegir Usuari</a>

						</div>				
						</br>
						</div>
							<div class="table-responsive">
								<table id="table_id" class="table table-striped table-bordered">
									<thead>
										<tr>
											<th>Nom d'usuari</th>
											<th>Email</th>
											<th>Ultima sessió</th>
											<th>Actiu</th>											
											<th><span class="fa fa-cogs"></span> Config</th>
										</tr>
									</thead>
									<tfoot>
										<tr>
											<th>Nom d'usuari</th>
											<th>Email</th>
											<th>Ultima sessió</th>
											<th>Actiu</th>											
											<th><span class="fa fa-cogs"></span> Config</th>
										</tr>
									</tfoot>
									<tbody>
										{% for usuari in array %}
										<tr>
											<td>{{usuari.username}}</td>
											<td>{{usuari.email}}</td>
											<td>{{usuari.lastLogin | date('d/m/Y')}}</td>
											{% if usuari.enabled  == 1 %}
											<td><a href="#"><span id="btnActiu_{{usuari.id}}" class="fa fa-toggle-on fa-2x"/></a></td>	
											{% else %}	
											<td><a href="#"><span id="btnActiu_{{usuari.id}}" class="fa fa-toggle-off fa-2x"/></a></td>				
											{% endif %}
											<td>
												<center>
												<a class="btn btn-xs btn-info"><span class="fa fa-pencil"></span></a>
												<a class="btn btn-xs btn-danger"><span class="fa fa-trash"></span></a>
												</center>
											</td>
										</tr>
										 {% endfor %} 										
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
			</div>	
	{% endblock %}	
