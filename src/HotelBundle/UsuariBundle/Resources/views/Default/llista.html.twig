											<th>Nom d'usuari</th>
											<th>Email</th>
											<th>Ultima sessió</th>
											<th>Actiu</th>											
											<th>edit</th>
										</tr>
									</tfoot>
									<tbody>
										{% for usuari in array %}
										<tr>
											<td>{{usuari.username}}</td>
											<td>{{usuari.email}}</td>
											<td>{{usuari.lastLogin | date('d/m/Y')}}</td>
