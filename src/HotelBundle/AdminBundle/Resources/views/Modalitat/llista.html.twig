{% extends "HotelBundle:Default:backend.html.twig" %}
{% block title %}Tipus Treballador {% endblock %}
    {% block content %} 
        <div id="contingut">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="text-center">Tipus Treballador</h1>
                        {% for flashMessage in app.session.flashbag.get('notice') %}
                            <div class="alert alert-{{ flashMessage.type }}">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                <h4 class="text-center">{{ flashMessage.msg }}</h4>
                            </div>
                        {% endfor %}    
                        <div class="row">
                            <a href="{{path('hotel_bundle_addModalitat')}}" class="btn btn-warning btn-afegir"><span class="fa fa-plus"/>  Afegir Modalitat</a>
                        </div>
                            <div class="table-responsive">
                                <table id="table_id" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Modalitat</th>
                                            <th>Preu</th>
                                            <th><span class="fa fa-cogs"></span> Config</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>Modalitat</th>
                                            <th>Preu</th>
                                            <th><span class="fa fa-cogs"></span> Config</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        {% for modalitat in array %}
                                        <tr>
                                            <td>{{modalitat.descripcio}}</td>
                                            <th>{{modalitat.preu}} â‚¬</th>
                                            <td>
                                                <center>
                                                <a href="{{ path('hotel_bundle_editModalitat', { 'id': modalitat.id }) }}" class="btn btn-xs btn-info"><span class="fa fa-pencil"></span></a>
                                                <a  href="{{path('hotel_bundle_deleteModalitat', { 'id': modalitat.id }) }}"class="btn btn-xs btn-danger"><span class="fa fa-trash"></span></a>
                                                </center>
                                            </td>
                                        </tr>
                                         {% endfor %}                                       
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>  
    {% endblock %}  