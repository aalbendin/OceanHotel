{% extends "HotelBundle:Default:backend.html.twig" %}
{% block title %}Llista d'usuaris{% endblock %}
	{% block content %} 
		<div id="contingut">
			<div class="container-fluid">
				<div class="row">
					<div class="col-lg-12">
						<h1>Habitacions</h1>
						{% for flashMessage in app.session.flashbag.get('notice') %}
							<div class="alert alert-{{ flashMessage.type }}">
								<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
								<h4 class="text-center">{{ flashMessage.msg }}</h4>
							</div>
						{% endfor %}	
						<div class="row">
							<a href="{{path('hotel_bundle_addHabitacio')}}" class="btn btn-warning">Afegir Habitació</a>
						</div>
						<div class="row">									
						</div>
							<div class="table-responsive">
								<table id="table_id" class="table table-striped table-bordered">
									<thead>
										<tr>
											<th>Num. Habitació</th>
											<th>Places</th>
											<th>Preu</th>
											<th>Tipus d'habitació</th>											
											<th><span class="fa fa-cogs"></span> Config</th>
										</tr>
									</thead>
									<tfoot>
										<tr>
											<th>Num. Habitació</th>
											<th>Places</th>
											<th>Preu</th>
											<th>Tipus d'habitació</th>											
											<th><span class="fa fa-cogs"></span> Config</th>
										</tr>
									</tfoot>
									<tbody>
										{% for habitacio in array %}
										<tr>
											<td>{{habitacio.numHabitacio}}</td>
											<td>{{habitacio.places}}</td>
											<td>{{habitacio.preu}}</td>
											<td>{{habitacio.getTipusHabitacio().getDescripcio()}}</td>
											<td>
												<center>
												<a href="{{ path('hotel_bundle_habitacio_edit', { 'id': habitacio.id }) }}" class="btn btn-xs btn-info"><span class="fa fa-pencil"></span></a>
												<a  href="{{path('hotel_bundle_habitacio_delete', { 'id': habitacio.id }) }}"class="btn btn-xs btn-danger"><span class="fa fa-trash"></span></a>
												</center>
											</td>
										</tr>
										 {% endfor %} 										
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
			</div>	
	{% endblock %}	
